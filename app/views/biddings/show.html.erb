<%- model_class = @bidding.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @bidding.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @bidding.description %></dd>
</dl>

<h3>Arquivos (<%= @bidding.documents.size -%>)</h3>
<ul>
  <% @bidding.documents.each do |documento| -%>
  <li><%= link_to (image_tag '/assets/file_icon_small.png', :alt => "#{documento.name}"), "#{documento.file}", :target => "_blank" %> <%= documento.name %></li>
  <% end -%>
</ul>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              biddings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bidding_path(@bidding), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bidding_path(@bidding),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
